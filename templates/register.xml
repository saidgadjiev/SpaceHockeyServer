<fest:template xmlns:fest="http://fest.mail.ru" context_name="json">
	<fest:include src="./menuButton.xml" context="json"/>
	<fest:include src="./logoutButton.xml" context="json"/>
 	<script type="text/javascript">
      Cufon.replace("h1", {fontFamily: 'Canossa-Ultra'});
    </script>
    <div class="form-signup-signin">
	    <h1 class="form-signup-signin__header">Registration</h1>
		<form name="form_signup" class="form_signup" id="form_signup">
	    	<div class="form__input-item">
	    		<h1>Login</h1>
	    		<input type="text" required="required" name="login"/>
	    	</div>
	    	<div class="form__input-item">
	    		<h1>Password</h1>
	    		<input type="password" required="required" name="password"/>
	    	</div>
	    	<div class="form__input-item">
	    		<h1>Email</h1>
	    		<input type="email" required="required" name="email"/>
	    	</div>
	    	<button type="submit" class="button-submit">SignUp</button>
	    </form>
    </div>
</fest:template>