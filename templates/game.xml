<fest:template xmlns:fest="http://fest.mail.ru" context_name="json">
    <div id="body">
        <div id="hello">
            <p class="gameplay">Hello, <fest:value>json.login</fest:value>!</p>
        </div>

        <div id="wait">
            <p class="gameplay">Prepare yourself. Wait for enemy!</p>
        </div>

        <div id="gameplay" style="display: none">
            <div id="score">
                <p class="gameplay"><span id="myName"></span>: <span id="myScore">0</span></p>

                <p class="gameplay"><span id="enemyName"></span>: <span id="enemyScore">0</span></p>
            </div>
        </div>
        <div id="gameOver" style="display: none">
            <p>Result: <span id="win"></span></p>
        </div>
    </div>
    <canvas width="600" height="700" id="gamefield"></canvas>
</fest:template>